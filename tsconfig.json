{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "lib",
    "declaration": true,
    "declarationDir": "declarations",
    "target": "ES2016",
    "lib": ["es5", "es6", "dom"],
    "module": "CommonJS",
    "noImplicitAny": false,
    "moduleResolution": "classic",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["./lib/**/*"],
  "exclude": ["dist", "node_modules"]
}
