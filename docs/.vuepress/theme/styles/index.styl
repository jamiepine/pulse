@tailwind base;
@tailwind components;
@tailwind utilities;

@import 'utilities';
@require './code'

@css {
  html, body {
      height: 100%;
  }
  .wrapper {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -200px;
  }
  .footer {
    height: 200px;
  }
}

.container-warning
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color #f6e05e
  .title
    font-weight bold

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right

